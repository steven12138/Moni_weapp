/* pages/near_com/near_com.wxss */
.container{
  display: flex;
  flex-direction: column;
  background-color: #f0f3f6;
  align-items: center;
  font-family: 'Courier New' !important;
}


.menu_card{
  width:80%;
  margin: 10px;
  margin-bottom: 15px !important;
  min-height:150px;
  background-color: white;
  border-radius: 3px;
  box-shadow: 0 4px 5px 0 rgba(0,0,0,0.14), 0 1px 10px 0 rgba(0,0,0,0.12), 0 2px 4px -1px rgba(0,0,0,0.3);
}

.title_part{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title_part_image{
  width:calc(100%);
  max-height: 130px;
  border-radius: 3px;
  filter:brightness(1);
  margin-bottom: 5px !important;
}

.content_part{
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 10px;
  display:flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  font-family: "微软雅黑";
  font-weight: 500;
  letter-spacing: 1px;
  font-size: 1.03em;
}