.container{
  display: flex;
  flex-direction: column;
  background-color: #f0f3f6;
  align-items: center;
}

.menu_card{
  width:80%;
  margin: 10px;
  background-color: white;
  border-radius: 4px;
  box-shadow: 0 4px 5px 0 rgba(0,0,0,0.14), 0 1px 10px 0 rgba(0,0,0,0.12), 0 2px 4px -1px rgba(0,0,0,0.3);
}

.last{
  margin-bottom: 20px !important;
}

.title_part{
  display: flex;
  flex-direction: column;
  align-items: center;
}

