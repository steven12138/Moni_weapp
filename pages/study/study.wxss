.title_part_image{
  width:calc(100% - 20px);
  max-height: 130px;
  border-radius: 4px;
  filter:brightness(1);
  margin:10px;
  margin-bottom: -15px !important;
}

.content_part{
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.subcell{
  width: 100%;
}

.title_part_title{
  /* margin-top: calc(-65px - 1em + 5px); */
