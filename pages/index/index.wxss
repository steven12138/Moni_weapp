/**index.wxss**/
.head_area {
  background-color: #2c387e;
  /* background-image: linear-gradient(to right, #3f51b5 , #5c6bc0); */
  min-width: 100vw;
  height: 30%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 5rpx 0 rgba(0, 0, 0, 0.14), 0 1rpx 10rpx 0 rgba(0, 0, 0, 0.12), 0 2rpx 4rpx -1rpx rgba(0, 0, 0, 0.3);
}

.container {
  height: 1vh !important;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}


@media screen and (max-width: 350px) {
  .container {
    font-size: 0.9em;
  }
}

.icon_area {
  content: "";
  display: flex;
  width: 200px;
  height: 200px;
  box-shadow: 0 4px 5px 0 rgba(0, 0, 0, 0.14), 0 1px 10px 0 rgba(0, 0, 0, 0.12), 0 2px 4px -1px rgba(0, 0, 0, 0.3);
  background-color: white;
  margin-bottom: -90px;
  z-index: 10;
  border-radius: 100px;
  justify-content: center;
  align-items: center;
}

.icon_inner_image {
  width: 190px;
  height: 190px;
  border-radius: 200px;
}



.title_text {
  margin-top: 30px;
  font-size: 1.2em;
  color: white
}

.list_area {
  width: 100vw;
  height: calc(100% - 30%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icons {
  margin-top: 10px;
  margin-bottom: -10px;
}

.text {
  margin-top: -10px;
  margin-bottom: 10px;
}

.top {
  margin-top: 110px !important;
}

.button_t {
  width: 85%;
  height: 100px;
  margin: 15px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 4px;
  box-shadow: 0 10px 11px 0 rgba(148, 148, 148, 0.18), 0 5px 15px 0 rgba(148, 148, 148, 0.17), 0 5px 14px -1px rgba(148, 148, 148, 0.08);
}

.list_button_title {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20px;
}

.list_button_left_icon {
  margin-top: 3px;
}

.list_button_title_text {
  font-size: 1.1em;
  margin-left: 10px;
}

.list_button_right_icon {
  margin-right: 10px;
  margin-top: 3px;
}